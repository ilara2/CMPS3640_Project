{
  "files": ["typings/index.d.ts"],
  "compilerOptions": {
    "baseUrl": ".",
    "paths": { "*": ["*", "*"] },
    "target": "esnext",
    "module": "esnext",
    "lib": ["es6", "dom"],
    "jsx": "react",
    "moduleResolution": "node",
    "rootDir": "src",
    "forceConsistentCasingInFileNames": true,
    "allowJs": true,
    "resolveJsonModule": true,
    "noEmit": true,
    "strict": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true
  },
  "include": ["src", "assets", "typings"],
  "exclude": ["node_modules"]
}
